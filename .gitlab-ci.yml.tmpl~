#! /usr/bin/env bash

set -e
set -u
set -o pipefail

ACTION_BRANCH="${TERRAT_ACTION_BRANCH:-v1}"

cat << EOF > "$1"
# .gitlab-ci.yml - Using the terrateam template

include:
  - project: 'terrateam/terrateam-template'
    file: 'terrateam-template.yml'

stages:
  - terrateam

terrateam_job:
  extends: .terrateam_template
  variables:
    ACTION_BRANCH: 
EOF
