engine:
  name: pulumi

when_modified:
  file_patterns: []

dirs:
  code:
    when_modified:
      file_patterns: ['${DIR}/**/*.yaml']

    workspaces:
      dev: {}

cost_estimation:
  enabled: false

hooks:
  all:
    pre:
      - type: env
        name: PULUMI_CONFIG_PASSPHRASE
        cmd: ['echo', '']

workflows:
  - tag_query: ''
    plan:
      - type: init
        extra_args: ['file://${TERRATEAM_ROOT}/pulumi']
      - type: plan
    apply:
      - type: init
        extra_args: ['file://${TERRATEAM_ROOT}/pulumi']
      - type: apply
